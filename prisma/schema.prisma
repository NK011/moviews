generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

model movies {
  id             Int       @id @default(autoincrement())
  name           String    @db.VarChar(255)
  release_date   DateTime  @db.Date
  average_rating Decimal?  @db.Decimal(3, 2)
  reviews        reviews[]
}

model reviews {
  id              Int     @id @default(autoincrement())
  movie_id        Int
  reviewer_name   String? @db.VarChar(255)
  rating          Decimal @db.Decimal(3, 2)
  review_comments String? @db.Text
  movies          movies  @relation(fields: [movie_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "reviews_ibfk_1")

  @@index([movie_id], map: "movie_id")
}
